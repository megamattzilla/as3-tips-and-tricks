{
   "class": "AS3",
   "action": "deploy",
   "persist": true,
   "declaration": {
      "class": "ADC",
      "schemaVersion": "3.0.0",
      "id": "urn:uuid:33045210-3ab8-4636-9b2a-c98d22ab915d",
      "label": "Sample 1",
      "remark": "Simple HTTP application with RR pool",
{% for virtual in VIRTUALS %}
      "{{ virtual.name }}": {
         "class": "Tenant",
         "{{ virtual.name }}": {
            "class": "Application",
            "{{ virtual.name }}": {
               "class": "Service_HTTP",
               "virtualAddresses": [
                  "{{ virtual.virtualAddresses }}"
               ],
               "pool": "{{ virtual.default_pool }}"
            },
{% for pool in POOLS if pool.name in virtual.default_pool %}
            "{{ pool.name }}": {
               "class": "Pool",
               "monitors": [
                  "http"
               ],
               "members": [{
                  "servicePort": {{ pool.servicePort }},
                  "serverAddresses": [
{% for poolMember in pool.serverAddresses %}
                    "{{ poolMember }}"{{ "," if not loop.last else "" }}
{% endfor %}
                  ]
               }]
{% endfor %}
               }
            }
            {{ "}," if not loop.last else "}" }}
    {% endfor %}
   }
}